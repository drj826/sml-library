[%#

document_page.tt

ARGS:

self    => document part represented by content
content => content to be wrapped by the page

-%]
[%-

library = self.get_library
id      = self.get_id

-%]
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/1999/xhtml" xml:lang="en">

