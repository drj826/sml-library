<html>
<head>

<title>[%- library.get_first_property_value(id,'title') -%]</title>

[% INCLUDE js_popimage.tt -%]
[% INCLUDE js_gotoa.tt -%]
[% INCLUDE document_css.tt -%]

</head>
<body>
<div class="mainbox">
	<div class="left_navigation">
		[%- INCLUDE document_navigation.tt -%]
	</div>

	<div class="main_page_area">
		[% IF document.contains_header -%]
			<div class="page_header">
				[%- INCLUDE header.tt -%]
			</div>
		[%- END -%]

		[%- IF banner_navigation != '' -%]
			<div class="page_navigation">
				[%- banner_navigation -%]
			</div>
		[%- END -%]

		<div class="page_content">
			[%- content -%]
			<div class="pad2"></div>
			<div class="pad2"></div>
		</div>

		[%- IF banner_navigation != '' -%]
			<div class="page_navigation">
				[%- banner_navigation -%]
			</div>
		[%- END -%]

		[%- IF document.contains_footer -%]
			<div class="page_footer">
				[%- INCLUDE footer.tt -%]
			</div>
		[%- END -%]
	</div> 
</div>

</body>
</html>
